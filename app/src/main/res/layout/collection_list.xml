<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/cardProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/custom_card_new">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="16dp"
            android:src="@drawable/kenzo_patch"/>

        <TextView
            android:id="@+id/productRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.9 (66 reviews)"
            android:paddingStart="12dp"
            android:gravity="center|start"
            android:drawableLeft="@drawable/round_star_24"
            android:drawablePadding="4dp"
            android:textColor="@color/light_black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kenzo Patch"
            android:paddingStart="16dp"
            android:textColor="@color/light_black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp1.200.000,00"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:textColor="@color/light_black"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>